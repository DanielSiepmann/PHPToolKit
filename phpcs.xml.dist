<?xml version="1.0"?>
<ruleset name="project">
    <description>This project coding standard</description>

    <file>src/</file>
    <file>tests/</file>

    <arg name="encoding" value="utf-8" />
    <arg name="extensions" value="php" />

    <rule ref="PSR12">
        <exclude name="Generic.Files.LineLength.TooLong" />
    </rule>
</ruleset>
